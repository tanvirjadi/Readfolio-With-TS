        <div class="container books d-flex flex-wrap py-3 mb-4  border-top">
          <% books.forEach((book) => { %> 
            <div class="book" style="margin-left: 10%; margin-top: 10%;">
              <img style="float: left; margin-right: 2%;" src="https://covers.openlibrary.org/b/isbn/<%= book.isbn %>-M.jpg" />
              <div style="display: flex;">
              <h3 class="bookTitle"><%= book.title %></h3>
              <form action="/edit" method="post">
               <button type="submit" class="btn" value="<%= book.id %>" name="editBtn"><svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="white" class="bi bi-pencil" viewBox="0 0 16 16">
                <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325"/>
              </svg></button></form>
              <form action="/delete" method="post"><button name="deleteBtn" type="submit" class="btn" value="<%= book.id %>"><svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="red" class="bi bi-trash" viewBox="0 0 16 16">
                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
              </svg></button></form>
            </div>
              <p class="bookDetail"><span class="detailTitle">Review Date:</span> <%= book.review_date.toDateString() %> <br> <span class="detailTitle">Written by</span> <%= book.author %> <br> <span class="detailTitle">ISBN:</span> <%= book.isbn %> <br> <span class="detailTitle">How strongly I recommend it:</span> <%= book.rating %>/10</p>
              <p style="width: 80%; font-size: 20px; text-wrap: wrap;"><%= book.review %></p>
            </div>
          <% }); %>
